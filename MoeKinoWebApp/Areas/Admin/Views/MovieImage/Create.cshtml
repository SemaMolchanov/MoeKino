@using MoeKinoWebApp.Models;

@{
    Layout = "_Layout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model MovieImage

<form method="post" asp-action="CreatePOST" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create MovieImage</h2>
            <hr>
        </div>
        <div class="mb-3">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control" type="file" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MovieId"></label>
            <input asp-for="MovieId" class="form-control" />
            <span asp-validation-for="MovieId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IsPoster" class="form-check-label"></label>
            <input asp-for="IsPoster" class="form-check-input" type="checkbox" />
            <span asp-validation-for="IsPoster" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="MovieImage" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


