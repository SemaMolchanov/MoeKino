@using MoeKinoWebApp.Models;

@{
    Layout = "_Layout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Country

<form method="post" asp-action="CreatePOST">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Country</h2>
            <hr>
        </div>
        <div class="mb-3">
            <label asp-for="NameEn"></label>
            <input asp-for="NameEn" class="form-control" />
            <span asp-validation-for="NameEn" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NameRu"></label>
            <input asp-for="NameRu" class="form-control" />
            <span asp-validation-for="NameRu" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Country" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}