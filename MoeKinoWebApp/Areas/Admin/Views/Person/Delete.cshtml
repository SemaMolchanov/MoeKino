@using MoeKinoWebApp.Models;

@{
    Layout = "_Layout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Person

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Person</h2>
            <hr>
        </div>
        <div class="mb-3">
            <label asp-for="BirthDate"></label>
            <input asp-for="BirthDate" disabled class="form-control" type="date" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FullNameEn"></label>
            <input asp-for="FullNameEn" disabled class="form-control" />
            <span asp-validation-for="FullNameEn" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FullNameRu"></label>
            <input asp-for="FullNameRu" disabled class="form-control" />
            <span asp-validation-for="FullNameRu" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="ShortBioEn"></label>
            <input asp-for="ShortBioEn" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ShortBioRu"></label>
            <input asp-for="ShortBioRu" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Person" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}