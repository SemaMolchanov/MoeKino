@using MoeKinoWebApp.Models;

@{
    Layout = "_LayoutAdmin";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<Person>

@{
    ViewData["Title"] = "Index";
}


<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Persons List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Person", asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Person
            </a>
        </div>
    </div>
</div>
<br>

<table class="table table-bordred table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Birth Date
            </th>
            <th>
                Full Name En
            </th>
            <th>
                Full Name Ru
            </th>
            <th>
                Short Bio En
            </th>
            <th>
                Short Bio Ru
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Id
                </td>
                <td width="10%">
                    @obj.BirthDate
                </td>
                <td width="10%">
                    @obj.FullNameEn
                </td>
                <td width="10%">
                    @obj.FullNameRu
                </td>
                <td width="10%">
                    @obj.ShortBioEn
                </td>
                <td width="10%">
                    @obj.ShortBioRu
                </td>
    
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Person" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Person" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
