@using MoeKinoWebApp.Models;

@{
    Layout = "_LayoutAdmin";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<MovieGenre>

@{
    ViewData["Title"] = "Index";
}


<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">MovieGenres List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="MovieGenre", asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New MovieGenre
            </a>
        </div>
    </div>
</div>
<br>

<table class="table table-bordred table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Movie ID
            </th>
            <th>
                Genre ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.MovieID
                </td>
                <td width="50%">
                    @obj.GenreID
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="MovieGenre" asp-action="Edit" asp-route-MovieID="@obj.MovieID" asp-route-GenreID="@obj.GenreID" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="MovieGenre" asp-action="Delete" asp-route-MovieID="@obj.MovieID" asp-route-GenreID="@obj.GenreID" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
